{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "global-require": 0,
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "import/no-extraneous-dependencies": [
      "error", {
        // do not report error if matched
        "devDependencies": [
          "{config,internal}/**/*.js",
          "**/*.test.js"
        ]
      }
    ]
  }
}
